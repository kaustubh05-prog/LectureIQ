# App
APP_ENV=development
APP_SECRET_KEY=change-this-to-a-long-random-secret-key-in-production
APP_DEBUG=true

# Database
DATABASE_URL=postgresql://lectureiq:lectureiq_secret@localhost:5432/lectureiq_db

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
S3_BUCKET_NAME=lectureiq-audio

# AI Services
GROQ_API_KEY=gsk_your_groq_api_key
YOUTUBE_API_KEY=your_youtube_api_key

# Whisper
WHISPER_MODEL=base

# JWT
JWT_SECRET_KEY=change-this-to-another-long-random-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
